<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_course_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/DIMEN_6DP"
    android:paddingLeft="@dimen/DIMEN_12DP"
    android:paddingRight="@dimen/DIMEN_12DP"
    android:paddingTop="@dimen/DIMEN_6DP"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_item_teacher_pic"
        android:layout_width="@dimen/DIMEN_106DP"
        android:layout_height="@dimen/DIMEN_106DP"
        android:layout_marginRight="@dimen/DIMEN_16DP"
        android:background="@drawable/clock_wait"
        android:scaleType="centerCrop"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:id="@+id/ll_teacher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_14DP"
        android:layout_toLeftOf="@+id/iv_collect"
        android:layout_toRightOf="@id/iv_item_teacher_pic"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:gravity="center_vertical"
            android:text="lisa"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:background="@drawable/female"
            android:contentDescription="@string/desc" />

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_green_1eb482_radius_70"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="三年教龄"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_12DP" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_show_teacher_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_teacher_info"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:layout_toRightOf="@id/iv_item_teacher_pic"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属机构"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP" />

        <TextView
            android:id="@+id/tv_course_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="开设课程：健康饮食、现代舞初级"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_show_teacher_detail"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:layout_toRightOf="@id/iv_item_teacher_pic"
        android:gravity="center_vertical"
        android:text="该老师已设置不展示个人资料"
        android:textColor="@color/color_black_33"
        android:textSize="@dimen/DIMEN_12DP"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:background="@drawable/star_in"
        android:contentDescription="@string/desc" />
</RelativeLayout>