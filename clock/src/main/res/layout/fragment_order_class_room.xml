<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <include
        android:id="@+id/ly_wifi"
        layout="@layout/wifi_fail"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lv_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/color_gay_f5"
            android:dividerHeight="@dimen/DIMEN_12DP"
            ptr:ptrAnimationStyle="flip" />

        <RelativeLayout
            android:id="@+id/rl_merge_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_58DP"
            android:background="@color/blackde5"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/cb_check_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:background="@drawable/cb_pay_choose_bg"
                android:button="@null" />

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:layout_toRightOf="@id/cb_check_all"
                android:text="@string/all_choose"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_14DP" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_34DP"
                android:layout_toRightOf="@id/tv_all"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_14DP" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_total"
                android:text="￥0.00"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/DIMEN_14DP"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_merge_pay"
                android:layout_width="@dimen/DIMEN_130DP"
                android:layout_height="@dimen/DIMEN_34DP"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/DIMEN_12DP"
                android:background="@drawable/bg_exit_or"
                android:text="合并支付"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_17DP" />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_no_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_mineorder_none"
            android:layout_width="@dimen/DIMEN_140DP"
            android:layout_height="@dimen/DIMEN_140DP"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_116DP"
            android:src="@drawable/none_order"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_mineorder_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_mineorder_none"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_26DP"
            android:text="@string/order_none"
            android:textColor="@color/color_gay_8f"
            android:textSize="@dimen/DIMEN_17DP" />

        <TextView
            android:id="@+id/tv_mineorder_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mineorder_none"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:text="@string/order_see"
            android:textColor="@color/color_gay_8f"
            android:textSize="@dimen/DIMEN_14DP" />

        <Button
            android:id="@+id/btn_stroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mineorder_see"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/DIMEN_64DP"
            android:layout_marginRight="@dimen/DIMEN_64DP"
            android:layout_marginTop="@dimen/DIMEN_68DP"
            android:background="@drawable/bg_exit_or"
            android:text="@string/order_stroll"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_17DP" />
    </RelativeLayout>
</FrameLayout>