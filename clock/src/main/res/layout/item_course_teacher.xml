<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_course_teacher_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/DIMEN_12DP"
    tools:ignore="HardcodedText">

    <com.yiju.ClassClockRoom.widget.CircleImageView
        android:id="@+id/iv_item_course_teacher_avatar"
        android:layout_width="@dimen/DIMEN_35DP"
        android:layout_height="@dimen/DIMEN_35DP"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/DIMEN_12DP"
        android:src="@drawable/user_unload"
        app:border_color="@color/white"
        app:border_width="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_item_course_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_course_teacher_avatar"
        android:textColor="@color/color_black_33"
        android:textSize="@dimen/DIMEN_14DP"
        tools:text="王老师" />

    <LinearLayout
        android:id="@+id/ll_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item_course_teacher_name"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:src="@drawable/icon_administrators_list"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:text="(管理员)"
            android:textColor="@color/gray_8f"
            android:textSize="@dimen/DIMEN_12DP" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_mine_organization_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_12DP"
        android:layout_toRightOf="@id/ll_public"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_teacher_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/DIMEN_12DP"
        android:layout_toLeftOf="@+id/iv_select_teacher"
        android:text="@string/txt_data_for_completion_teacher"
        android:textColor="@color/color_orange_fa"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_select_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription" />

</RelativeLayout>