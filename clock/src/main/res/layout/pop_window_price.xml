<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_price_old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_43DP"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:gravity="center_vertical"
        android:text="@string/price_old"
        android:textSize="@dimen/DIMEN_15DP"
        android:textColor="@color/order_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/color_gay_ee"/>
    <TextView
        android:id="@+id/tv_price_low"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_43DP"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:gravity="center_vertical"
        android:text="@string/price_from_low_to_high"
        android:textSize="@dimen/DIMEN_15DP"
        android:textColor="@color/order_black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/color_gay_ee"/>
    <TextView
        android:id="@+id/tv_price_high"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_43DP"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:gravity="center_vertical"
        android:text="@string/price_from_high_to_low"
        android:textSize="@dimen/DIMEN_15DP"
        android:textColor="@color/order_black"/>

</LinearLayout>