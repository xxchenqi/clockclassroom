<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">

    <com.yiju.ClassClockRoom.widget.CircleImageView
        android:id="@+id/iv_item_blacklist"
        android:layout_width="@dimen/DIMEN_50DP"
        android:layout_height="@dimen/DIMEN_50DP"
        android:layout_margin="@dimen/DIMEN_12DP"
        android:src="@drawable/user_unload"
        app:border_color="@color/white"
        app:border_width="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_item_blacklist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_blacklist"
        android:text="新东方"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_tv_item_blacklist_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/DIMEN_12DP"
        android:text="移除黑名单"
        android:textSize="@dimen/DIMEN_12DP"
        android:paddingLeft="@dimen/DIMEN_10DP"
        android:paddingRight="@dimen/DIMEN_10DP"
        android:paddingTop="@dimen/DIMEN_6DP"
        android:paddingBottom="@dimen/DIMEN_6DP"
        android:background="@drawable/bg_white_bottom_green_1eb482_frame"
        android:textColor="@color/app_theme_color" />

</RelativeLayout>