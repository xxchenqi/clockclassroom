<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_course_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_120DP"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/iv_more_store_pic"
        android:layout_width="@dimen/DIMEN_100DP"
        android:layout_height="@dimen/DIMEN_100DP"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_12DP"
        android:layout_marginRight="@dimen/DIMEN_16DP"
        android:background="@drawable/clock_wait"
        android:scaleType="centerCrop"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_more_store_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载门店"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

        <TextView
            android:id="@+id/tv_item_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="正在加载"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_store_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="正在加载"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_12DP" />

            <TextView
                android:id="@+id/tv_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_12DP"
                android:text="请开启定位"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_14DP" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>