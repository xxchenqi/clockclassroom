<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_course_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_75DP"
        android:layout_marginLeft="@dimen/DIMEN_10DP"
        android:layout_marginRight="@dimen/DIMEN_10DP"
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_item_index_store_pic"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_75DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:background="@drawable/bg_placeholder_4_3"
            android:scaleType="centerCrop"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tv_item_index_store_booking"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_75DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:alpha="0.4"
            android:background="@color/color_lucency_0"
            android:gravity="center"
            android:text="@string/coming_reserve_space"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_index_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_index_store_pic"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/color_black_login"
            android:textSize="@dimen/DIMEN_18DP"
            tools:text="普陀友通中心" />

        <TextView
            android:id="@+id/tv_item_index_store_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_index_store_name"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:layout_toRightOf="@id/iv_item_index_store_pic"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/color_black_login"
            android:textSize="@dimen/DIMEN_10DP"
            tools:text="交通便利 双语教学" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_index_store_tag"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:layout_toRightOf="@id/iv_item_index_store_pic"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_index_store_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_black_login"
                android:textSize="@dimen/DIMEN_12DP"
                tools:text="地址：广中路788号" />

            <TextView
                android:id="@+id/tv_item_index_store_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:drawableLeft="@drawable/distance"
                android:drawablePadding="@dimen/DIMEN_5DP"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_10DP"
                tools:text="0.2km" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>