<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_70DP"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/order_sucess_icon" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:text="支付成功"
            android:textColor="@color/order_black"
            android:textSize="@dimen/DIMEN_16DP" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:text="钢管舞1对1教学，共8次课"
        android:textColor="@color/color_black_33"
        android:textSize="@dimen/DIMEN_14DP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_check_order"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_32DP"
            android:background="@drawable/background_green_1eb482_stroke_radius_2"
            android:text="查看订单"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/DIMEN_18DP" />

        <Button
            android:id="@+id/btn_goon"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_32DP"
            android:layout_marginLeft="@dimen/DIMEN_14DP"
            android:background="@drawable/background_green_1eb482_stroke_radius_2"
            android:text="继续订课"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/DIMEN_18DP" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="可能的原因" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="账户余额不足 " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="报名人数已满" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_40DP"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/DIMEN_80DP"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/color_blue_1a"
            android:textSize="@dimen/DIMEN_14DP" />
    </RelativeLayout>

</LinearLayout>