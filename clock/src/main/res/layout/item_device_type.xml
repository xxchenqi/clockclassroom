<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    tools:ignore="HardcodedText">


        <TextView
            android:id="@+id/tv_item_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />
        <TextView
            android:id="@+id/tv_item_device_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_105DP"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50DP"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            tools:ignore="ContentDescription">

            <ImageView
                android:id="@+id/iv_item_reduce"
                android:layout_width="@dimen/DIMEN_28DP"
                android:layout_height="@dimen/DIMEN_28DP"
                android:src="@drawable/order_reduce_btn_noclick" />

            <RelativeLayout
                android:layout_width="@dimen/DIMEN_40DP"
                android:layout_height="@dimen/DIMEN_28DP">

                <View
                    android:layout_width="@dimen/DIMEN_40DP"
                    android:layout_height="@dimen/DIMEN_1DP"
                    android:background="@color/color_gay_8f" />

                <EditText
                    android:id="@+id/et_item_device"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/DIMEN_14DP" />

                <View
                    android:layout_width="@dimen/DIMEN_40DP"
                    android:layout_height="@dimen/DIMEN_1DP"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gay_8f" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_item_add"
                android:layout_width="@dimen/DIMEN_28DP"
                android:layout_height="@dimen/DIMEN_28DP"
                android:src="@drawable/order_add_btn_click" />
        </LinearLayout>
    <View
        style="@style/linestyle_gray"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>