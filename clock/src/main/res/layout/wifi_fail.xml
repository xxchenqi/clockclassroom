<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_no_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_100DP"
        android:src="@drawable/none_wifi"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_no_wifi_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_no_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_24DP"
        android:text="@string/nowifi_content1"
        android:textColor="@color/color_gay_8f"
        android:textSize="@dimen/DIMEN_17DP"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_no_wifi_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_wifi_content1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:text="@string/nowifi_content2"
        android:textColor="@color/color_gay_8f"
        android:textSize="@dimen/DIMEN_14DP"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_no_wifi_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_wifi_content2"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/DIMEN_24DP"
        android:background="@drawable/background_green_1eb482_radius_5"
        android:text="@string/nowifi_refresh"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_17DP" />

</RelativeLayout>