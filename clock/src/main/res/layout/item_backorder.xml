<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_44DP" >

    <CheckBox
        android:id="@+id/cb_item_backorder_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/cb_pay_choose_bg"
        android:button="@null"
        android:checked="true"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_item_backorder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_12DP"
        android:layout_toRightOf="@id/cb_item_backorder_choose"
        android:text="2015/9/13"
        android:textColor="@color/color_gay_8f"
        android:textSize="@dimen/DIMEN_12DP"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_item_backorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="13:00-19:00"
        android:textColor="@color/color_gay_8f"
        android:textSize="@dimen/DIMEN_12DP"
        tools:ignore="HardcodedText" />

</RelativeLayout>