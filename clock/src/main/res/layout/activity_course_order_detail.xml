<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unfocused"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <!-- 订单超时提示布局-->
    <LinearLayout
        android:id="@+id/ll_order_overtime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_40DP"
        android:background="@color/black_99"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_course_order_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="若需要退单，请在课程开始24小时前，联系客服400 608 2626进行退单"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/delete" />
    </LinearLayout>

    <!--订单编号和订单状态-->
    <RelativeLayout
        android:id="@+id/rl_order_detail1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_40DP"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:background="@color/white"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_order_detail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单编号:正在加载"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_15DP"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_order_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="正在加载"
            android:textColor="@color/color_blue_1e"
            android:textSize="@dimen/DIMEN_15DP"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/DIMEN_12DP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:text="@string/order_time"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_12DP" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:text="正在加载"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_12DP"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/DIMEN_1DP">

        <!--订单详情的内容-->
        <com.yiju.ClassClockRoom.widget.ObservableScrollView
            android:id="@+id/sv_order_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_order_detail_pay"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--子item-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/DIMEN_10DP"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_38DP"
                        android:background="@color/color_gay_f5"
                        android:paddingLeft="@dimen/DIMEN_12DP"
                        android:paddingRight="@dimen/DIMEN_12DP">

                        <TextView
                            android:id="@+id/tv_item_detail_use_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="跆拳道教学"
                            android:textColor="@color/color_blue_1e"
                            android:textSize="@dimen/DIMEN_16DP" />

                        <TextView
                            android:id="@+id/tv_item_detail_room_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="共12次课程"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_16DP"
                            tools:ignore="HardcodedText" />

                        <View
                            style="@style/linestyle_gray_dd"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_check_classroom_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_32DP"
                        android:background="@color/color_gay_f5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/DIMEN_12DP"
                        android:paddingRight="@dimen/DIMEN_12DP">

                        <TextView
                            android:id="@+id/tv_item_detail_sname"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/DIMEN_36DP"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="闵行中心店"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP"
                            tools:ignore="HardcodedText" />


                        <!-- 点击进入可退单的页面-->
                        <TextView
                            android:id="@+id/tv_check_classroom_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/DIMEN_12DP"
                            android:drawableRight="@drawable/dark_more_btn"
                            android:gravity="center_vertical"
                            android:text="明细"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View style="@style/linestyle_gray_dd" />

                    <LinearLayout
                        android:id="@+id/ll_up_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_gay_f5"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/DIMEN_12DP"
                        android:paddingRight="@dimen/DIMEN_12DP">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/DIMEN_40DP"
                            android:gravity="center_vertical"
                            android:text="课程安排"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP" />

                        <View style="@style/linestyle_gray_dd" />
                    </LinearLayout>

                    <!--课程安排时间-->
                    <LinearLayout
                        android:id="@+id/ll_cancel_classroom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/ll_unfold"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_32DP"
                        android:background="@color/color_gay_f5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_unfold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_unfold" />

                        <ImageView
                            android:id="@+id/iv_unfold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_10DP"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/arrow_down_icon" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/rl_item_detail_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_gay_f5"
                        android:paddingLeft="@dimen/DIMEN_12DP"
                        android:paddingRight="@dimen/DIMEN_12DP">

                        <View
                            style="@style/linestyle_gray_dd"
                            android:layout_alignParentTop="true" />

                        <TextView
                            android:id="@+id/tv_item_detail_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/DIMEN_40DP"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:text="¥3245.34"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_16DP"
                            tools:ignore="HardcodedText" />

                        <!-- 点击进入费用明细-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/DIMEN_40DP"
                            android:gravity="center_vertical"
                            android:text="订单小计"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_16DP"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>
                </LinearLayout>

                <!--联系人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_42DP"
                    android:layout_marginTop="@dimen/DIMEN_12DP"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/DIMEN_12DP"
                    android:paddingRight="@dimen/DIMEN_12DP">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/color_black_33"
                        android:textSize="@dimen/DIMEN_16DP"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_order_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_order_detail_mobile"
                        android:text="name"
                        android:textColor="@color/color_gay_8f"
                        android:textSize="@dimen/DIMEN_14DP"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_order_detail_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/DIMEN_12DP"
                        android:text="mobile"
                        android:textColor="@color/color_gay_8f"
                        android:textSize="@dimen/DIMEN_14DP"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>

                <!--支付默认方式-->
                <RelativeLayout
                    android:id="@+id/rl_detail_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_40DP"
                    android:layout_marginTop="@dimen/DIMEN_12DP"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/DIMEN_12DP"
                        android:text="@string/order_pay_way"
                        android:textColor="@color/color_black_33"
                        android:textSize="@dimen/DIMEN_16DP" />

                    <TextView
                        android:id="@+id/tv_order_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/DIMEN_12DP"
                        android:text="@string/order_alipay"
                        android:textColor="@color/color_gay_8f"
                        android:textSize="@dimen/DIMEN_18DP" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/DIMEN_12DP"
                        android:layout_toLeftOf="@id/tv_order_alipay"
                        android:src="@drawable/alipay_pay_btn"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <!-- 订单总计模块-->
                <LinearLayout
                    android:id="@+id/ll_order_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_12DP"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_40DP"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/DIMEN_12DP"
                        android:text="@string/order_total"
                        android:textColor="@color/color_black_33"
                        android:textSize="@dimen/DIMEN_16DP" />

                    <View
                        style="@style/linestyle_h_unfocused"
                        android:layout_marginLeft="@dimen/DIMEN_12DP" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_38DP"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_12DP"
                            android:text="课程费用"
                            android:textColor="@color/color_gay_99"
                            android:textSize="@dimen/DIMEN_16DP" />

                        <TextView
                            android:id="@+id/tv_order_detail_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/DIMEN_12DP"
                            android:text="￥1234"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_reimburse"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_38DP"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_12DP"
                            android:text="@string/order_reimburse_price"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP" />

                        <TextView
                            android:id="@+id/tv_rl_reimburse_prices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/DIMEN_12DP"
                            android:text="￥124"
                            android:textColor="@color/app_theme_color"
                            android:textSize="@dimen/DIMEN_14DP"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>

                    <View
                        style="@style/linestyle_h_unfocused"
                        android:layout_marginLeft="@dimen/DIMEN_12DP" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_38DP"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DIMEN_12DP"
                            android:text="@string/order_ought_pay"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_16DP" />

                        <TextView
                            android:id="@+id/tv_ought_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/DIMEN_12DP"
                            android:text="￥1234"
                            android:textColor="@color/color_black_33"
                            android:textSize="@dimen/DIMEN_14DP"
                            tools:ignore="HardcodedText" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </com.yiju.ClassClockRoom.widget.ObservableScrollView>
        <!--立即支付-->
        <RelativeLayout
            android:id="@+id/rl_order_detail_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50DP"
            android:layout_alignParentBottom="true"
            android:background="@color/app_theme_color"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_order_detail_immediate_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="确认付款"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_16DP" />

            <TextView
                android:id="@+id/tv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:layout_toRightOf="@id/tv_order_detail_immediate_pay"
                android:text="[15:13]"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_16DP" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>