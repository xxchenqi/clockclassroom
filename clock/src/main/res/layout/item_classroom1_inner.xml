<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_classroom_class"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_24DP"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="教室:8831"
        android:textColor="@color/color_gay_99"
        android:textSize="@dimen/DIMEN_12DP"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_item_classroom_password"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_24DP"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_16DP"
        android:layout_toRightOf="@id/tv_item_classroom_class"
        android:gravity="center_vertical"
        android:textColor="@color/color_gay_99"
        android:textSize="@dimen/DIMEN_12DP"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_item_classroom_share"
        android:layout_width="@dimen/DIMEN_20DP"
        android:layout_height="@dimen/DIMEN_20DP"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/share_btn_icon"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/v_item_classroom_inner"
        style="@style/linestyle_h_unfocused"
        android:layout_below="@id/tv_item_classroom_class"
        android:visibility="gone" />
</RelativeLayout>