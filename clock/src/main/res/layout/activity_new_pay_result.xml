<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_70DP"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc"
            android:src="@drawable/order_sucess_icon" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:text="@string/reserve_ok"
            android:textColor="@color/order_black"
            android:textSize="@dimen/DIMEN_16DP" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:text="@string/reserve_success_content1"
        android:textColor="@color/color_black_33"
        android:textSize="@dimen/DIMEN_14DP" />

    <TextView
        android:id="@+id/tv_result_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_40DP"
        android:textColor="@color/gray_8f"
        android:textSize="@dimen/DIMEN_14DP" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_32DP"
            android:background="@drawable/background_green_1eb482_stroke_radius_2"
            android:text="@string/back_home"
            android:textColor="@color/color_green_1e"
            android:textSize="@dimen/DIMEN_18DP" />

        <Button
            android:id="@+id/btn_check_order"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_32DP"
            android:layout_marginLeft="@dimen/DIMEN_14DP"
            android:background="@drawable/background_green_1eb482_stroke_radius_2"
            android:text="@string/check_order"
            android:textColor="@color/color_green_1e"
            android:textSize="@dimen/DIMEN_18DP" />
    </LinearLayout>


</LinearLayout>