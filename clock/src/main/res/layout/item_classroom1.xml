<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_36DP">

        <TextView
            android:id="@+id/tv_item_classroom_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2015-9-13"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_item_classroom_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="13:00 ~ 19:00"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <View
        android:id="@+id/v_item_classroom"
        style="@style/linestyle_h_unfocused"
        android:visibility="gone" />
    <!--<View style="@style/linestyle_h_unfocused" />-->
    <LinearLayout
        android:id="@+id/ll_item_class_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <com.yiju.ClassClockRoom.widget.MyListView
        android:id="@+id/lv_item_classroom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/DIMEN_12DP"
        android:divider="@color/white"
        android:dividerHeight="0dip" />

</LinearLayout>