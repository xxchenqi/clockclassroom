<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_course_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:id="@+id/rl_left"
        android:layout_width="@dimen/DIMEN_140DP"
        android:layout_height="@dimen/DIMEN_106DP"
        android:layout_marginBottom="@dimen/DIMEN_6DP"
        android:layout_marginLeft="@dimen/DIMEN_12DP"
        android:layout_marginRight="@dimen/DIMEN_16DP"
        android:layout_marginTop="@dimen/DIMEN_6DP">

        <ImageView
            android:id="@+id/iv_course_pic"
            android:layout_width="@dimen/DIMEN_140DP"
            android:layout_height="@dimen/DIMEN_106DP"
            android:background="@drawable/clock_wait"
            android:scaleType="fitXY"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/tv_course_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_25DP"
            android:layout_gravity="bottom"
            android:background="@color/black_99"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_12DP"
            android:maxLines="1" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/DIMEN_6DP"
        android:layout_toRightOf="@id/rl_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_28DP"
            android:gravity="center_vertical"
            android:text="幼儿芭蕾零基础教学"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_22DP">

            <TextView
                android:id="@+id/tv_single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minWidth="@dimen/DIMEN_48DP"
                android:text="¥99.00/时"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_10DP" />

            <TextView
                android:id="@+id/tv_count_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_16DP"
                android:text="共12次课"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_10DP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/DIMEN_180DP"
            android:layout_height="@dimen/DIMEN_20DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="2016/2/12-2016/12/12"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_12DP"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/DIMEN_12DP"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:background="@drawable/star_in"
        android:contentDescription="@string/desc" />
</RelativeLayout>