<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="@dimen/DIMEN_247DP"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/updata_rocket_up"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_update"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_black_33"
        android:textSize="@dimen/DIMEN_15DP"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_update_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_update"
        android:layout_alignRight="@id/iv_update"
        android:layout_below="@id/iv_update"
        android:background="@color/white"
        android:paddingBottom="@dimen/DIMEN_20DP"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingTop="@dimen/DIMEN_20DP" />

    <View
        android:id="@+id/v_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:layout_alignLeft="@id/iv_update"
        android:layout_alignRight="@id/iv_update"
        android:layout_below="@id/tv_update_content"
        android:background="@color/color_gay_eb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:layout_alignLeft="@id/iv_update"
        android:layout_alignRight="@id/iv_update"
        android:layout_below="@id/v_update"
        android:background="@drawable/bg_white_corners"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_update_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/color_gay_aa"
            android:textSize="@dimen/DIMEN_15DP" />

        <View
            android:id="@+id/view_update_line"
            android:layout_width="@dimen/DIMEN_1DP"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_10DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:background="@color/color_gay_eb" />

        <TextView
            android:id="@+id/tv_update_affirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_15DP" />

    </LinearLayout>

</RelativeLayout>