<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:id="@+id/rl_item_person_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_36DP">
        <TextView
            android:id="@+id/tv_item_person_course_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_gay_99"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:textSize="@dimen/DIMEN_14DP"/>
        <TextView
            android:id="@+id/tv_item_person_course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/DIMEN_14DP" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_dd"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_item_person_course"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_80DP"
            android:layout_margin="@dimen/DIMEN_12DP"
            android:background="@drawable/clock_wait"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_item_person_course"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_person_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/order_black"
                android:textSize="@dimen/DIMEN_16DP" />

            <TextView
                android:id="@+id/tv_item_person_course_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_6DP"
                android:textColor="@color/order_black"
                android:textSize="@dimen/DIMEN_12DP"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_6DP"
                android:layout_marginRight="@dimen/DIMEN_12DP">
                <TextView
                    android:id="@+id/tv_item_person_course_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/order_black"
                    android:textSize="@dimen/DIMEN_12DP"/>
                <TextView
                    android:id="@+id/tv_item_person_course_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/order_black"
                    android:textSize="@dimen/DIMEN_12DP"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_dd"/>

    <RelativeLayout
        android:id="@+id/rl_item_person_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item_person_course_edit"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_28DP"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_theme_color"
            android:background="@drawable/desc_chang"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:text="@string/edit" />

        <TextView
            android:id="@+id/tv_item_person_course_delete"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_28DP"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_item_person_course_edit"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:textColor="@color/order_black"
            android:background="@drawable/desc_course_chang"
            android:text="@string/delete" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_dd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_12DP"
        android:background="@color/color_gay_ee"/>
</LinearLayout>