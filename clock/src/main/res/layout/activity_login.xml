<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_44DP">

            <ImageView
                android:layout_width="@dimen/DIMEN_46DP"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_60DP"
            android:background="@drawable/logo" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_55DP"
        android:layout_marginLeft="@dimen/DIMEN_35DP"
        android:layout_marginRight="@dimen/DIMEN_35DP"
        android:layout_marginTop="@dimen/DIMEN_30DP">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_55DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_12DP"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:layout_marginTop="@dimen/DIMEN_12DP"
                android:text="@string/add_eight_six"
                android:textColor="@color/order_black"
                android:textSize="@dimen/DIMEN_16DP" />

            <View
                android:layout_width="@dimen/DIMEN_1DP"
                android:layout_height="@dimen/DIMEN_26DP"
                android:layout_marginBottom="@dimen/DIMEN_12DP"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:layout_marginTop="@dimen/DIMEN_12DP"
                android:background="@color/gray" />

            <com.yiju.ClassClockRoom.widget.ClearEditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/label_hint_phonelogin"
                android:inputType="number"
                android:maxLength="13"
                android:maxLines="1"
                android:paddingRight="@dimen/DIMEN_10DP"
                android:textColor="@color/color_black_33"
                android:textColorHint="@color/color_gay_bb"
                android:textSize="@dimen/DIMEN_16DP"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <com.yiju.ClassClockRoom.widget.FireworkView
            android:id="@+id/fire_work"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:layout_marginLeft="@dimen/DIMEN_35DP"
        android:layout_marginRight="@dimen/DIMEN_35DP"
        android:background="@color/gray_dd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60DP"
        android:layout_marginLeft="@dimen/DIMEN_35DP"
        android:layout_marginRight="@dimen/DIMEN_35DP"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/DIMEN_200DP"
            android:layout_height="@dimen/DIMEN_44DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_register_verify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/verify"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="@dimen/DIMEN_10DP"
                android:textColor="@color/color_black_33"
                android:textColorHint="@color/color_gay_bb"
                android:textSize="@dimen/DIMEN_16DP"
                tools:ignore="HardcodedText" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_12DP"
                android:layout_marginLeft="@dimen/DIMEN_10DP"
                android:layout_marginRight="@dimen/DIMEN_10DP"
                android:layout_marginTop="@dimen/DIMEN_12DP"
                android:background="@color/gray_dd" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="@string/get_verify"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/DIMEN_16DP" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:layout_marginLeft="@dimen/DIMEN_35DP"
        android:layout_marginRight="@dimen/DIMEN_35DP"
        android:background="@color/gray_dd" />


    <com.yiju.ClassClockRoom.widget.circular.CircularProgressButton
        android:id="@+id/circular_button_login"
        android:layout_width="@dimen/DIMEN_306DP"
        android:layout_height="@dimen/DIMEN_44DP"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_30DP"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_19DP"
        app:cpb_cornerRadius="@dimen/DIMEN_30DP"
        app:cpb_paddingProgress="@dimen/DIMEN_1DP"
        app:cpb_textIdle="@string/label_login" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:gravity="center"
        android:text="@string/create_phone_info"
        android:textColor="@color/color_gay_99"
        android:textSize="@dimen/DIMEN_12DP" />

    <TextView
        android:id="@+id/tv_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_26DP"
        android:gravity="center"
        android:text="@string/label_password_login"
        android:textColor="@color/black66"
        android:textSize="@dimen/DIMEN_15DP" />


    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_other_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_65DP"
            android:gravity="center_horizontal"
            android:text="@string/label_social_account"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP" />

        <LinearLayout
            android:id="@+id/ll_third_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/textview_other_login"
            android:layout_marginTop="@dimen/DIMEN_24DP"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_qq_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:layout_marginRight="@dimen/DIMEN_12DP"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/qq" />

            <ImageView
                android:id="@+id/login_wechat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:layout_marginRight="@dimen/DIMEN_12DP"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/wechat" />

            <ImageView
                android:id="@+id/login_sina_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:layout_marginRight="@dimen/DIMEN_12DP"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/sina" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>