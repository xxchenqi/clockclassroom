<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/rl_teacher_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_item_teacher_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/clock_wait"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc" />

        <TextView
            android:id="@+id/tv_teacher_name"
            style="@style/textstyle_16p_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_25DP"
            android:layout_alignParentBottom="true"
            android:background="@color/black_99"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_teacher_type"
        style="@style/textstyle_10p_black66"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="11111" />

    <TextView
        android:id="@+id/tv_course_info"
        style="@style/textstyle_10p_black66"
        android:layout_marginBottom="@dimen/DIMEN_12DP"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="11111" />

</LinearLayout>