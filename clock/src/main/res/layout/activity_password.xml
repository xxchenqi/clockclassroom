<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_password_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_44DP">

            <ImageView
                android:layout_width="@dimen/DIMEN_46DP"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/desc"
                android:src="@drawable/room_back" />
        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DIMEN_60DP"
            android:background="@drawable/logo"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:layout_marginLeft="@dimen/DIMEN_24DP"
        android:layout_marginRight="@dimen/DIMEN_24DP"
        android:layout_marginTop="@dimen/DIMEN_16DP"
        android:background="@drawable/bg_et_login"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/DIMEN_10DP"
        android:paddingRight="@dimen/DIMEN_10DP">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/DIMEN_6DP"
            android:background="@drawable/lock"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_12DP"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:layout_marginRight="@dimen/DIMEN_6DP"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/password_text"
            android:inputType="textPassword"
            android:textSize="@dimen/DIMEN_14DP"
            tools:ignore="HardcodedText"
            android:maxLines="1" />

        <CheckBox
            android:id="@+id/cb_password_is_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cb_password_bg"
            android:button="@null" />
    </LinearLayout>

    <com.yiju.ClassClockRoom.widget.circular.CircularProgressButton
        android:id="@+id/circular_immediately_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:layout_marginLeft="@dimen/DIMEN_24DP"
        android:layout_marginRight="@dimen/DIMEN_24DP"
        android:layout_marginTop="@dimen/DIMEN_16DP"
        android:textColor="@color/color_lucency_white"
        android:textSize="@dimen/DIMEN_15DP"
        app:cpb_cornerRadius="@dimen/DIMEN_30DP"
        app:cpb_paddingProgress="@dimen/DIMEN_1DP"
        app:cpb_textIdle="@string/label_immediately_login" />

</LinearLayout>