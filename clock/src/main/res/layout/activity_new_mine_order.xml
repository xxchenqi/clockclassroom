<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unfocused"
    android:orientation="vertical">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_40DP">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab_order"
            style="@style/order_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:background="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_order"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>