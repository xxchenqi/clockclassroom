<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_12DP"
        android:background="@color/color_gay_f5" />

    <RelativeLayout
        android:id="@+id/rl_select_classroom_purpose"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_70DP"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_usage_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:contentDescription="@string/desc"
            android:src="@drawable/usage_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_use_type"
            android:layout_toRightOf="@id/iv_usage_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_classroom_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择课室用途"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/DIMEN_16DP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程决定课室的布置"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_12DP" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_use_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_select_student_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_70DP"
        android:background="@color/white">

        <View
            style="@style/linestyle_h_unfocused"
            android:layout_marginLeft="@dimen/DIMEN_12DP" />

        <ImageView
            android:id="@+id/iv_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:contentDescription="@string/desc"
            android:src="@drawable/type_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_student_type"
            android:layout_toRightOf="@id/iv_type_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_select_student_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择学生类型"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/DIMEN_16DP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生类型决定桌椅样式"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_12DP" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_student_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_12DP"
        android:background="@color/color_gay_f5" />

    <ListView
        android:id="@+id/lv_device_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/unfocused"
        android:dividerHeight="@dimen/DIMEN_1DP" />


