<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="contentDescription">


    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_40DP"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_filtrate_store"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_filtrate_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_address"
                android:textColor="@color/order_black"
                android:textSize="@dimen/DIMEN_12DP" />

            <ImageView
                android:id="@+id/iv_filtrate_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:src="@drawable/down_gray"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/DIMEN_1DP"
            android:layout_height="@dimen/DIMEN_21DP"
            android:layout_gravity="center"
            android:background="@color/color_gay_f5"/>
        <LinearLayout
            android:id="@+id/ll_filtrate_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_filtrate_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_old"
                android:textColor="@color/order_black"
                android:textSize="@dimen/DIMEN_12DP" />

            <ImageView
                android:id="@+id/iv_filtrate_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:src="@drawable/down_gray" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_course_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_dd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/list_course_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ptr:ptrAnimationStyle="flip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_b2"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>