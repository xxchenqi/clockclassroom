<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_120DP"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/DIMEN_6DP"
    android:paddingLeft="@dimen/DIMEN_12DP"
    android:paddingRight="@dimen/DIMEN_12DP"
    android:paddingTop="@dimen/DIMEN_6DP"
    tools:ignore="HardcodedText">


    <FrameLayout
        android:id="@+id/fl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_item_room_pic"
            android:layout_width="@dimen/DIMEN_100DP"
            android:layout_height="@dimen/DIMEN_100DP"
            android:background="@drawable/clock_wait"
            android:scaleType="centerCrop"
            tools:ignore="contentDescription" />

        <!--<TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_20DP"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/DIMEN_13DP"
            android:background="@drawable/translucent"
            android:drawableLeft="@drawable/light"
            android:drawablePadding="@dimen/DIMEN_6DP"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/DIMEN_100DP"
            android:paddingLeft="@dimen/DIMEN_6DP"
            android:text="最多容纳8人"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_10DP"
            android:maxLines="1" />-->

        <TextView
            android:id="@+id/tv_corner_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_16DP"
        android:layout_toRightOf="@id/fl_left"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/DIMEN_8DP">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_class_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="迷你间"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_16DP" />
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(最多容纳8人)"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_12DP" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mid_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/DIMEN_26DP"
                android:layout_height="@dimen/DIMEN_16DP"
                android:background="@drawable/background_gray_stroke"
                android:gravity="center"
                android:text="平日"
                android:textColor="@color/gray_8f"
                android:textSize="@dimen/DIMEN_10DP" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/DIMEN_54DP"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_day_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_4DP"
                    android:maxLines="1"
                    android:text="¥135"
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/DIMEN_13DP" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/时"
                    android:textColor="@color/app_theme_color"
                    android:textSize="@dimen/DIMEN_9DP" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/DIMEN_26DP"
                android:layout_height="@dimen/DIMEN_16DP"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:background="@drawable/background_gray_stroke"
                android:gravity="center"
                android:text="周末"
                android:textColor="@color/gray_8f"
                android:textSize="@dimen/DIMEN_10DP" />

            <TextView
                android:id="@+id/tv_week_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_4DP"
                android:maxLines="1"
                android:text="¥145"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/DIMEN_13DP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/时"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/DIMEN_9DP" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_reserve"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_30DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:background="@drawable/background_green_1eb482_radius_3"
            android:gravity="center"
            android:text="@string/reserve_space"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>