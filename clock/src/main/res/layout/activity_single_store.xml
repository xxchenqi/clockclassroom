<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/head_back_relative"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/head_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_12DP"
                android:contentDescription="@string/desc"
                android:focusable="false"
                android:src="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/head_center_relative"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="@dimen/DIMEN_100DP">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black66"
                android:textSize="@dimen/DIMEN_17DP" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/head_right_relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/head_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_12DP"
                android:src="@drawable/share" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/head_divider"
        style="@style/linestyle_gray_f5" />

    <ListView
        android:id="@+id/lv_single_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/color_gay_f5"
        android:dividerHeight="@dimen/DIMEN_1DP" />

    <include
        android:id="@+id/ly_wifi"
        layout="@layout/wifi_fail"
        android:visibility="gone" />
</LinearLayout>
