<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_18DP"
        android:layout_marginLeft="@dimen/DIMEN_18DP"
        android:layout_marginTop="@dimen/DIMEN_12DP">

        <ImageView
            android:id="@+id/iv_item_pledge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/store_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_item_pledge_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_item_pledge_title"
            android:layout_marginLeft="@dimen/DIMEN_6DP"
            android:layout_toRightOf="@id/iv_item_pledge_title"
            android:text="虹梅旗舰店"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/DIMEN_12DP"
            tools:ignore="HardcodedText" />

    </RelativeLayout>


    <com.yiju.ClassClockRoom.widget.ListViewForScrollView
        android:id="@+id/lv_item_pledge_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"/>

</LinearLayout>