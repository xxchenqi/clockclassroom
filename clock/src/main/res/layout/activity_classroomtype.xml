<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_green_bg_left_icon_right_text_layout" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/app_theme_color"
        app:tabIndicatorHeight="@dimen/DIMEN_2DP"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/app_theme_color"
        app:tabTextColor="@color/color_gay_99" />

    <View style="@style/linestyle_order_divider_view2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gay_f5" />

</LinearLayout>
