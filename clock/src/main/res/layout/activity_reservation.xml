<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">
    <!-- =======================================标题================================================= -->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:background="@drawable/back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_reservation_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/order_black"
            android:textSize="@dimen/DIMEN_17DP" />

        <TextView
            android:id="@+id/tv_reservation_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_12DP"
            android:text="@string/label_login"
            android:textColor="@color/order_black"
            android:textSize="@dimen/DIMEN_14DP"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_reservation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_12DP"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_70DP">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_12DP"
                        android:src="@drawable/reserve_moon_icon"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/reservation_title"
                            android:text="@string/reservation_date_title" />

                        <TextView
                            style="@style/reservation_content"
                            android:layout_below="@+id/tv_date"
                            android:text="@string/reservation_date_content" />
                    </RelativeLayout>

                </RelativeLayout>

                <View style="@style/linestyle_gray" />


                <RelativeLayout
                    android:id="@+id/rl_week"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_70DP">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_12DP"
                        android:src="@drawable/reserve_week_icon"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_week"
                            style="@style/reservation_title"
                            android:text="@string/reservation_week_title" />

                        <TextView
                            style="@style/reservation_content"
                            android:layout_below="@+id/tv_week"
                            android:text="@string/reservation_week_content" />

                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/linestyle_gray" />


                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_70DP">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_12DP"
                        android:src="@drawable/reserve_time_icon"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/reservation_title"
                            android:text="@string/reservation_time_title" />

                        <TextView
                            style="@style/reservation_content"
                            android:layout_below="@+id/tv_time"
                            android:text="@string/reservation_time_content" />
                    </RelativeLayout>

                </RelativeLayout>

                <View style="@style/linestyle_gray_12" />

                <RelativeLayout
                    android:id="@+id/rl_room_count"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_70DP">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_12DP"
                        android:src="@drawable/reserve_classroom_icon"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_room_count"
                            style="@style/reservation_title"
                            android:text="@string/reservation_room_count_title" />

                        <TextView
                            style="@style/reservation_content"
                            android:layout_below="@+id/tv_room_count"
                            android:text="@string/reservation_room_count_content" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/DIMEN_12DP"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_room_reduce"
                            android:layout_width="@dimen/DIMEN_28DP"
                            android:layout_height="@dimen/DIMEN_28DP"
                            android:src="@drawable/order_reduce_btn_noclick"
                            tools:ignore="ContentDescription" />

                        <RelativeLayout
                            android:layout_width="@dimen/DIMEN_40DP"
                            android:layout_height="@dimen/DIMEN_28DP">

                            <View
                                android:layout_width="@dimen/DIMEN_40DP"
                                android:layout_height="@dimen/DIMEN_1DP"
                                android:background="@color/color_gay_8f" />

                            <EditText
                                android:id="@+id/et_room_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="1"
                                android:textColor="@color/app_theme_color"
                                android:textSize="@dimen/DIMEN_14DP" />

                            <View
                                android:layout_width="@dimen/DIMEN_40DP"
                                android:layout_height="@dimen/DIMEN_1DP"
                                android:layout_alignParentBottom="true"
                                android:background="@color/color_gay_8f" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_room_add"
                            android:layout_width="@dimen/DIMEN_28DP"
                            android:layout_height="@dimen/DIMEN_28DP"
                            android:src="@drawable/order_add_btn_click"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/linestyle_gray_12" />

                <RelativeLayout
                    android:id="@+id/rl_device"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_70DP">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_12DP"
                        android:src="@drawable/reserve_equipment_icon"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_device"
                            style="@style/reservation_title"
                            android:text="@string/reservation_device_title" />

                        <TextView
                            style="@style/reservation_content"
                            android:layout_below="@+id/tv_device"
                            android:text="@string/reservation_device_content" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_reservation_little"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_50DP"
                    android:background="@color/gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/DIMEN_12DP"
                        android:text="@string/reservation_date_little"
                        android:textColor="@color/color_gay_99"
                        android:textSize="@dimen/DIMEN_14DP" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/DIMEN_12DP"
                        android:src="@drawable/more_btn_icon"
                        tools:ignore="contentDescription" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_reservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/DIMEN_24DP"
                        android:layout_marginTop="@dimen/DIMEN_12DP"
                        android:text="@string/reserve_reminder"
                        android:textColor="@color/app_theme_color"
                        android:textSize="@dimen/DIMEN_14DP" />


                    <TextView
                        android:id="@+id/tv_reservation_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="@dimen/DIMEN_12DP"
                        android:paddingLeft="@dimen/DIMEN_24DP"
                        android:paddingRight="@dimen/DIMEN_24DP"
                        android:paddingTop="@dimen/DIMEN_12DP"
                        android:textColor="@color/color_gay_99"
                        android:textSize="@dimen/DIMEN_14DP" />

                    <TextView
                        android:id="@+id/tv_reservation_describe_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingBottom="@dimen/DIMEN_12DP"
                        android:paddingRight="@dimen/DIMEN_24DP"
                        android:text="显示全部"
                        android:textColor="@color/app_theme_color"
                        android:textSize="@dimen/DIMEN_14DP" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_24DP"
                    android:background="@color/gray" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_reservation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_49DP"
            android:layout_alignParentBottom="true"
            android:background="@color/app_theme_color"
            android:gravity="center"
            android:text="@string/determine"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_18DP" />
    </RelativeLayout>


</RelativeLayout>