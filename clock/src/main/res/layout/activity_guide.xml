<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="@dimen/DIMEN_45DP"
            android:layout_height="@dimen/DIMEN_20DP"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/DIMEN_20DP"
            android:layout_marginTop="@dimen/DIMEN_20DP"
            android:background="@drawable/background_guid_skip"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_12DP" />
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/DIMEN_52DP"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:layout_width="@dimen/DIMEN_10DP"
            android:layout_height="@dimen/DIMEN_10DP"
            android:background="@drawable/dot"
            android:button="@null"
            android:clickable="false" />

        <RadioButton
            android:layout_width="@dimen/DIMEN_10DP"
            android:layout_height="@dimen/DIMEN_10DP"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:background="@drawable/dot"
            android:button="@null"
            android:clickable="false" />

        <RadioButton
            android:layout_width="@dimen/DIMEN_10DP"
            android:layout_height="@dimen/DIMEN_10DP"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:background="@drawable/dot"
            android:button="@null"
            android:clickable="false" />

        <RadioButton
            android:layout_width="@dimen/DIMEN_10DP"
            android:layout_height="@dimen/DIMEN_10DP"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:background="@drawable/dot"
            android:button="@null"
            android:clickable="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_experience"
        android:layout_width="@dimen/DIMEN_140DP"
        android:layout_height="@dimen/DIMEN_40DP"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/DIMEN_45DP"
        android:background="@drawable/background_green_1eb482_radius_20"
        android:gravity="center"
        android:text="@string/experience"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_19DP"
        android:visibility="gone" />

</RelativeLayout>