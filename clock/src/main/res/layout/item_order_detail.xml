    <LinearLayout
        android:id="@+id/ll_all_up_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_up_down"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:paddingLeft="@dimen/DIMEN_12DP"
            android:paddingRight="@dimen/DIMEN_12DP">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/DIMEN_40DP"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="个别日期调整"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_15DP" />

            <ImageView
                android:id="@+id/iv_up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/desc"
                android:src="@drawable/more_btn_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_individuation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_4DP"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/DIMEN_12DP"
            android:paddingRight="@dimen/DIMEN_12DP"
            android:visibility="visible">

            <View style="@style/linestyle_h_unfocused" />

            <TextView
                android:id="@+id/tv_cancel_classroom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_35DP"
                android:gravity="center_vertical"
                android:text="取消课室"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_14DP" />

            <LinearLayout
                android:id="@+id/ll_cancel_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tv_add_classroom"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_35DP"
                android:gravity="center_vertical"
                android:text="增加课室"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_14DP" />

            <LinearLayout
                android:id="@+id/ll_add_classroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/DIMEN_10DP" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_can_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP">

        <TextView
            android:id="@+id/tv_can_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:gravity="center_vertical"
            android:text="可选设备"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_15DP" />

        <View style="@style/linestyle_h_unfocused" />

        <!-- 可选设备 列表-->
        <LinearLayout
            android:id="@+id/ll_no_free_device_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/DIMEN_12DP" />

    </LinearLayout>

    <View style="@style/linestyle_h_unfocused" />

    <!-- 课室布置 -->
    <LinearLayout
        android:id="@+id/ll_set_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP">

        <LinearLayout
            android:id="@+id/ll_set_classroom_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_classroom_arrangement"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_15DP" />

            <!-- 点击进入课室布置页面-->
            <TextView
                android:id="@+id/tv_edit_classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/DIMEN_12DP"
                android:drawableRight="@drawable/dark_more_btn"
                android:gravity="center_vertical"
                android:text="修改"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_12DP" />

        </LinearLayout>

        <View style="@style/linestyle_h_unfocused" />

        <!-- 课室布置 列表头-->
        <TextView
            android:id="@+id/tv_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_12DP"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:gravity="center_vertical"
            android:textColor="@color/color_gay_99"
            android:textSize="@dimen/DIMEN_14DP" />

        <LinearLayout
            android:id="@+id/ll_classroom_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/DIMEN_12DP" />


    </LinearLayout>

    <View style="@style/linestyle_h_unfocused" />

