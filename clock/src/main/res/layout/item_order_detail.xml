<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/unfocused"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <!--<View style="@style/linestyle_h_unfocused" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_44DP"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP">

        <ImageView
            android:id="@+id/iv_item_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_8DP"
            android:contentDescription="@string/desc"
            android:src="@drawable/chain" />

        <TextView
            android:id="@+id/tv_item_detail_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_blue_1e"
            android:textSize="@dimen/DIMEN_16DP"
            tools:ignore="HardcodedText"
            tools:text="闵行中心店" />
        <!--<TextView
            android:id="@+id/tv_item_detail_use_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跆拳道教学"
            android:textColor="@color/color_blue_1e"
            android:textSize="@dimen/DIMEN_16DP"/>

        <TextView
            android:id="@+id/tv_item_detail_room_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="共18小时"
            android:textColor="@color/color_black_33"
            android:textSize="@dimen/DIMEN_16DP"
            tools:ignore="HardcodedText" />-->
    </LinearLayout>

    <View style="@style/linestyle_h_unfocused" />

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/DIMEN_12DP"
        android:paddingRight="@dimen/DIMEN_12DP">

        <ImageView
            android:id="@+id/iv_order_pic"
            android:layout_width="@dimen/DIMEN_92DP"
            android:layout_height="@dimen/DIMEN_92DP"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/DIMEN_12DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:scaleType="centerCrop"
            android:src="@drawable/clock_wait"
            tools:ignore="contentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/DIMEN_12DP"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:layout_toRightOf="@+id/iv_order_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_28DP">

                <TextView
                    android:id="@+id/tv_item_detail_room_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black_33"
                    android:textSize="@dimen/DIMEN_16DP"
                    tools:text="中间课室" />

                <TextView
                    android:id="@+id/tv_item_detail_max_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_6DP"
                    android:layout_toRightOf="@id/tv_item_detail_room_type"
                    android:textColor="@color/color_black_33"
                    android:textSize="@dimen/DIMEN_12DP"
                    tools:text="(最多容纳10人)" />

                <TextView
                    android:id="@+id/tv_item_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black_33"
                    android:textSize="@dimen/DIMEN_16DP"
                    tools:text="X1" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_20DP"
                android:gravity="center_vertical"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_12DP"
                tools:ignore="HardcodedText"
                tools:text="2015-9-13 ~ 2015/9/13" />

            <TextView
                android:id="@+id/tv_item_detail_repeat"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_20DP"
                android:gravity="center_vertical"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_12DP"
                tools:ignore="HardcodedText"
                tools:text="周一" />

            <TextView
                android:id="@+id/tv_item_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_12DP"
                tools:ignore="HardcodedText"
                tools:text="13:00 ~ 19:00" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_course_nearly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:layout_marginTop="@dimen/DIMEN_12DP"
            android:background="@color/white"
            android:paddingLeft="@dimen/DIMEN_12DP"
            android:paddingRight="@dimen/DIMEN_12DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_40DP"
                android:gravity="center_vertical"
                android:text="近期课室"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_15DP" />

            <TextView
                android:id="@+id/tv_course_nearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_gay_99"
                android:textSize="@dimen/DIMEN_14DP"
                tools:text="2016-09-13 18:00 ~ 19:00 A103" />
        </RelativeLayout>

        <View style="@style/linestyle_h_unfocused" />

        <RelativeLayout
            android:id="@+id/rl_all_course"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_40DP"
            android:background="@color/white"
            android:paddingLeft="@dimen/DIMEN_12DP"
            android:paddingRight="@dimen/DIMEN_12DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_40DP"
                android:gravity="center_vertical"
                android:text="全部课室"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_15DP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/DIMEN_12DP"
                android:drawableRight="@drawable/dark_more_btn"
                android:gravity="center_vertical"
                android:text="明细"
                android:textColor="@color/color_black_33"
                android:textSize="@dimen/DIMEN_12DP" />
        </RelativeLayout>
    </LinearLayout>
